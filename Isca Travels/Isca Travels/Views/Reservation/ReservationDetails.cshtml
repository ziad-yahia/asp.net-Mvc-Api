@using Microsoft.AspNetCore.Identity
@model Trip
@{
    ViewData["Title"] = "Reservation Details";

   
}


<div class="col-12 " >
    <center>
        
            <h1 class=" text-secondary" style="font-size:5vh">@Model.Name</h1>

        

        <hr />
        <div class="row p-4 ">
            Trip Note : <p class="alert  alert-secondary text-black fs-6">@Model.Notes</p>
        </div>


        <div class="col-12">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/Images/Luxor/pexels-diego-f-parra-33199-15188088.jpg" )" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Images/Luxor/pexels-moe-salah-3649681-5461689.jpg")" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Images/Luxor/pexels-axp-photography-500641970-18934665.jpg")" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Images/Luxor/pexels-reneterp-2482317.jpg")" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Images/Luxor/pexels-diego-f-parra-33199-15188105.jpg")" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <hr />
        <div class="row p-5" style="height:auto">
            <div class="col-6">
                <p class="fs-2 text ">
                    <strong>
                        Trip Days :
                        @Model.Days
                    </strong>
                </p>
            </div>
            <div class="col-6 ">
                <p class="fs-2 text ">
                    <strong>
                        Trip Price  :
                        @Model.Price.ToString("C")
                    </strong>

                </p>
            </div>
        </div>


        <div class="row p-4" style="overflow:hidden; height:auto; background-color:#f5f5f7">
       
           <div class="col-lg-5 col-sm-12">   
                  <strong>Trip Image:</strong>
                <img src="@Url.Content("~/Images/" + Model.ImgPath)" class="card-img-top" alt="Model.Description" />                           
           </div>

            <div class="col-lg-7 col-sm-12">
                <strong> Trip Description :</strong>
                <p  class="fs-4 p-3">
                    @Model.Description 
                   
                </p>
            </div>
    
       </div>
       
        <hr />

            <div class="col-6 mt-5" >
                <form asp-controller="Reservation" asp-action="AddTrip" method="post">
                    <div class="card " >
                    <div class="card-body row p-4" style="background-color:#f5f5f7">
                            <input type="hidden" name="Tripid" value="@Model.Id" />
                            <input type="hidden" name="UserName" value="@User.Identity?.Name" />
                            <input type="hidden" value="@Model.Id" name="ModelId" />
                        <div class="form-group col-md-6 col-sm-12">
                            <label class="control-label fs-5">Adult Count :</label>
                            <input type="number" value="1" min="1" class="form-control  text-center" name="Adult" />
                        </div>
                        <div class="form-group col-md-6  col-sm-12">
                            <label class="control-label fs-5">Child Count :</label>
                            <input type="number" value="0" min="0" class="form-control text-center" name="Child" />
                         </div>
                        <div class="form-group col-md-6  col-sm-12">
                            <label class="control-label fs-5">WhatsApp With Country Code :</label>
                            <input  type="text" required  class="form-control text-center" placeholder="example +201000133291" name="Phonenumber" />
                        </div>
                        <div class="form-group col-md-6  col-sm-12">
                                <label class="control-label fs-5">Start Date :</label>
                            <input type="date" required class="form-control text-center" name="Datestart" />
                         </div>
                            <div class="col-12">

                            <label class="control-label fs-6    ">is private: </label>
                                <input class="form-check-input" type="checkbox" value="True" name="isprivate" />
                            </div>
                            <input type="submit" class="btn btn-primary col-12 fs-6" value="Reservation" />
                        </div>
                    </div>
                </form>
            </div>

       


    </center>
    
</div>




 